<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorFondo"
    tools:context="com.iesvirgendelcarmen.dam.material08.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:id="@+id/tarjeta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        card_view:cardBackgroundColor="#daa986"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        card_view:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/Imagen1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ferrari" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#8c8fa6dc"
            android:gravity="center"
            android:text="Ferrari"
            android:textColor="#060679"
            android:textSize="30dp"
            android:textStyle="bold" />




    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/tarjeta2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        card_view:cardBackgroundColor="#daa986"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/Imagen2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/rancio" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#8c8fa6dc"
            android:gravity="center"
            android:text="Mariscos Recio"
            android:textColor="#060679"
            android:textSize="30dp"
            android:textStyle="bold" />


</android.support.v7.widget.CardView>







</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">



        <android.support.v7.widget.CardView
            android:id="@+id/tarjeta3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#daa986"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            card_view:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/Imagen3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/messi" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#8c8fa6dc"
                android:gravity="center"
                android:text="Messi"
                android:textColor="#060679"
                android:textSize="30dp"
                android:textStyle="bold" />



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/tarjeta2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#daa986"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="10dp"
            card_view:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/Imagen4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ps" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#8c8fa6dc"
                android:gravity="center"
                android:text="Play Station"
                android:textColor="#060679"
                android:textSize="30dp"
                android:textStyle="bold" />


        </android.support.v7.widget.CardView>







    </LinearLayout>
</LinearLayout>